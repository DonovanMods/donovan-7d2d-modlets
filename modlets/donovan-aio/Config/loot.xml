<bundle>
  <!-- Included from donovan-bettervehicles -->
  <!-- Storage Sizes -->
  <set xpath="//lootcontainer[@name='vehicleBicycle']/@size">10,2</set>
  <!-- Bicycle (Default: 9,1) -->
  <set xpath="//lootcontainer[@name='vehicleMinibike']/@size">10,4</set>
  <!-- Minibike (Default: 9,3)-->
  <set xpath="//lootcontainer[@name='vehicleMotorcycle']/@size">10,8</set>
  <!-- Motorcycle (Default: 9,4) -->
  <set xpath="//lootcontainer[@name='vehicle4x4Truck']/@size">10,10</set>
  <!-- 4x4Truck (Default: 9,9) -->
  <set xpath="//lootcontainer[@name='vehicleGyrocopter']/@size">10,6</set>
  <!-- Gyrocopter (Default: 9,5) -->
  <!-- Included from donovan-lessgrind -->
  <!-- Increase the amount of feathers and eggs you find in nests -->
  <set xpath="//lootgroup[@name='groupBirdNest01']/item[@name='resourceFeather']/@count">5,10</set>
  <set xpath="//lootgroup[@name='groupBirdNest02']/item[@name='resourceFeather']/@count">5,10</set>
  <set xpath="//lootgroup[@name='groupBirdNest02']/item[@name='foodEgg']/@loot_prob_template">high</set>
  <!-- Add acid to cupboards -->
  <append xpath="//lootgroup[@name='groupCupboard02']">
    <item name="resourceAcid" count="1,2" loot_prob_template="low"/>
  </append>
  <!-- increase number of Eggs in refrigerators -->
  <append xpath="//lootgroup[@name='groupRefrigerator02']">
    <item group="groupIngredientsRare" loot_prob_template="low"/>
  </append>
  <!-- increase number of lockpicks found -->
  <set xpath="//lootgroup/item[@name='resourceLockPick']/@count">3,10</set>
  <!-- Included from donovan-morebooks -->
  <set xpath="//lootgroup[starts-with(@name, 'group')]/item[@group='booksAllScaled']/@loot_prob_template">high</set>
  <set xpath="//lootgroup[starts-with(@name, 'group')]/item[@group='skillMagazines']/@loot_prob_template">high</set>
  <set xpath="//lootgroup[starts-with(@name, 'groupJunk')]/item[@group='booksAllScaled']/@loot_prob_template">med</set>
  <set xpath="//lootgroup[starts-with(@name, 'groupJunk')]/item[@group='skillMagazines']/@loot_prob_template">med</set>
  <!-- Included from donovan-nvhelmetmod -->
  <set xpath="//item[@name='armorMilitaryHelmet']/@mods">modNVHelmetLight</set>
  <set xpath="//item[@name='armorMilitaryHelmet']/@mod_chance">.8</set>
  <set xpath="//item[@name='armorSwatHelmet']/@mods">modNVHelmetLight</set>
  <set xpath="//item[@name='armorSwatHelmet']/@mod_chance">.6</set>
</bundle>
