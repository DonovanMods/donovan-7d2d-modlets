<configs>
  <!-- Remove the default food/water bars -->
  <remove xpath="//window[@name='windowToolbelt']/rect/rect[@stat_type='Food']" />
  <remove xpath="//window[@name='windowToolbelt']/rect/rect[@stat_type='Water']" />
  <set xpath="//window[@name='windowToolbelt']/@pos">-313,88</set>

  <!-- Add the new Water/Food Bars -->
  <set xpath="//window[@name='HUDLeftStatBars']/rect[@name='hud' and @side='left']/@pos">90,159</set>
  <set xpath="//window[@name='HUDLeftStatBars']/rect[@name='hud' and @side='right']/@pos">9,183</set>
  <append xpath="//window[@name='HUDLeftStatBars']">
    <rect name="wellnessBars" pos="9,33" rows="1" cols="1" side="right">
      <!-- Water Bar -->
      <rect width="84" height="23" pos="0,0" controller="HUDStatBar" stat_type="Water" visible="{statvisible}">
        <sprite depth="1" name="border" color="0,0,0,128" type="sliced" />
        <sprite depth="2" name="background" color="0,0,0,140" type="sliced" />
        <sprite depth="9" color="[black]" sprite="menu_empty2px" globalopacity="false" type="sliced" fillcenter="false" />
        <filledsprite depth="5" pos="1,0" width="82" name="BarContent" color="0,0,128,200" type="filled" fill="0" globalopacity="false" />
        <sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="{staticon|once}" size="16,16" pos="3,-3" foregroundlayer="true" />
        <label depth="7" name="TextContent" pos="3,-3" font_size="16" color="[white]" justify="center" pivot="topleft" text="{statcurrent}%" height="17" />
      </rect>

      <!-- Food Bar -->
      <rect width="84" height="23" pos="87,0" controller="HUDStatBar" stat_type="Food" visible="{statvisible}">
        <sprite depth="1" name="border" color="0,0,0,128" type="sliced" />
        <sprite depth="2" name="background" color="0,0,0,140" type="sliced" />
        <sprite depth="9" color="[black]" sprite="menu_empty2px" globalopacity="false" type="sliced" fillcenter="false" />
        <filledsprite depth="5" pos="1,0" width="82" name="BarContent" color="0,128,0,200" type="filled" fill="0" globalopacity="false" />
        <sprite depth="6" name="Icon" atlas="{staticonatlas|once}" sprite="{staticon|once}" size="16,16" pos="3,-3" foregroundlayer="true" />
        <label depth="7" name="TextContent" pos="3,-3" font_size="16" color="[white]" justify="center" pivot="topleft" text="{statcurrent}%" height="35" />
      </rect>
    </rect>
  </append>

  <!-- Add the Locked slots functionality back to the UI -->
  <append xpath="//window[@name='windowBackpack']/panel[@name='header']/rect/rect">
    <combobox depth="3" name="cbxLockedSlots" pos="120,-7" width="100" height="30" tooltip_key="xuiStashLockedSlots" type="ComboBoxInt" value_min="0" value_max="45" value_wrap="true" value_increment="1" />
  </append>
  <append xpath="//window[@name='windowLooting' or @name='windowVehicleStorage']/panel[@name='header']/rect">
    <combobox depth="3" name="cbxLockedSlots" pos="70,-7" width="100" height="30" tooltip_key="xuiStashLockedSlots" type="ComboBoxInt" value_min="0" value_max="{container_slots}" value_wrap="true" value_increment="1" />
  </append>
</configs>
